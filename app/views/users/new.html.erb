<% provide(:title, 'Registro') %>
<h1>Registrate</h1>
<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    	<%= render 'shared/error_messages' %>
      <%= f.label :name,"Nombre" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Correo" %>
      <%= f.text_field :email %>

      <%= f.label :password ,"Password"%>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirma tu Password" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Crear mi cuenta", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>