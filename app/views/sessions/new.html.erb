<% provide(:title, "Ingresar") %>
<h1>Ingresar</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email,"Correo" %>
      <%= f.text_field :email %>

      <%= f.label :password,"Password" %>
      <%= f.password_field :password %>

      <%= f.submit "Ingresar", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Eres Nuevo? <%= link_to "Registrate Ahora!", signup_path %></p>
  </div>
</div>